---
const techs = [
  { label: 'Reports', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'SCADA', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'AI', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'Digital Twin', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'Industry 4.0', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'Notification Systems', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'Historian', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'MES', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'PLC and IO Cards', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'VFDs', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
  { label: 'Motors', vendors: ['Schneider','Aveva','Rockwell','Siemens','Ignition'] },
];
---
<header>
  <div style="display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap">
    <div style="display:flex;align-items:center;gap:1rem;">
      <a href="/" style="font-weight:700;">William Controls</a>
      <nav style="display:flex;gap:1rem;">
        <a href="/about">About</a>
        {techs.map(tech => (
          <details>
            <summary>{tech.label}</summary>
            <ul style="list-style:none;margin:0;padding-left:1rem;">
              {tech.vendors.map(vendor => (
                <li><a href={`/${tech.label
                    .toLowerCase()
                    .replace(/[\s.]+/g, '-')}/${vendor
                    .toLowerCase()
                    .replace(/[\s.]+/g, '-')}`}>
                    {vendor}
                    </a>
                </li>
              ))}
            </ul>
          </details>
        ))}
      </nav>
    </div>
  </div>
</header>
